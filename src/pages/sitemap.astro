---
import BaseLayout from '@layouts/BaseLayout.astro';
import Container from '@components/ui/Container.astro';
import SectionHeading from '@components/ui/SectionHeading.astro';
import { locations } from '@data/locations';

const mainPages = [
  { title: 'Home', href: '/' },
  { title: 'Ladies Only', href: '/ladies-only/' },
  { title: 'Kickboksen', href: '/kickboxing/' },
  { title: 'Lid Worden', href: '/signup/' },
  { title: 'Contact', href: '/contact/' },
];

const legalPages = [
  { title: 'Algemene Voorwaarden', href: '/terms/' },
  { title: 'Privacyverklaring', href: '/privacy/' },
  { title: 'SEPA Incassomachtiging', href: '/sepa/' },
];

const otherPages = [
  { title: 'Success', href: '/success/' },
];
---

<BaseLayout
  title="Sitemap | FitCity Culemborg"
  description="Overzicht van alle pagina's op de website van FitCity Culemborg."
>
  <section class="py-24 bg-bg-main">
    <Container>
      <SectionHeading
        title="Sitemap"
        subtitle="Een overzicht van alle pagina's"
      />

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-12 mt-12">
        <!-- Main Pages -->
        <div>
          <h2 class="text-2xl font-display mb-6 text-white">Hoofdmenu</h2>
          <ul class="space-y-3">
            {mainPages.map((page) => (
              <li>
                <a 
                  href={page.href}
                  class="text-text-muted hover:text-primary transition-colors duration-300 flex items-center gap-2"
                >
                  <span class="text-primary/50">›</span>
                  {page.title}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Locations -->
        <div>
          <h2 class="text-2xl font-display mb-6 text-white">Locaties</h2>
          <ul class="space-y-3">
            {locations.map((location) => (
              <li>
                <a
                  href={`/fitness-${location.slug}/`}
                  class="text-text-muted hover:text-primary transition-colors duration-300 flex items-center gap-2"
                >
                  <span class="text-primary/50">›</span>
                  Fitness {location.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Legal & Other -->
        <div>
          <h2 class="text-2xl font-display mb-6 text-white">Service & Info</h2>
          <ul class="space-y-3">
            {legalPages.map((page) => (
              <li>
                <a 
                  href={page.href}
                  class="text-text-muted hover:text-primary transition-colors duration-300 flex items-center gap-2"
                >
                  <span class="text-primary/50">›</span>
                  {page.title}
                </a>
              </li>
            ))}
            {otherPages.map((page) => (
              <li>
                <a 
                  href={page.href}
                  class="text-text-muted hover:text-primary transition-colors duration-300 flex items-center gap-2"
                >
                  <span class="text-primary/50">›</span>
                  {page.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>
