---
import USPCard from './USPCard.astro';
import Container from '@components/ui/Container.astro';
import type { USPData } from '@data/usps';

interface Props {
  usps: USPData[];
}

const { usps } = Astro.props;
---

<Container>
  <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
    {usps.map((usp) => (
      <USPCard
        icon={usp.icon}
        title={usp.title}
        description={usp.description}
      />
    ))}
  </div>

  <!-- Equipment Brands -->
  <div class="mt-16 pt-12 border-t border-white/10">
    <p class="text-center text-text-muted text-sm mb-8 uppercase tracking-wider">
      Premium Apparatuur
    </p>
    <div class="flex flex-col md:flex-row gap-6 md:gap-12 items-center max-w-5xl mx-auto">
      <!-- Nautilus -->
      <div class="brand-logo-container w-full md:flex-1">
        <div class="brand-logo bg-white border border-white/10 p-4 md:p-6 flex items-center justify-center h-24 md:h-32 transition-all duration-300 hover:border-primary">
          <img
            src="/images/nautilus-logo.png"
            alt="Nautilus"
            class="w-full h-auto max-h-16 md:max-h-20 object-contain"
          />
        </div>
      </div>

      <!-- Technogym -->
      <div class="brand-logo-container w-full md:flex-1">
        <div class="brand-logo bg-white border border-white/10 p-4 md:p-6 flex items-center justify-center h-24 md:h-32 transition-all duration-300 hover:border-primary">
          <img
            src="/images/technogym-logo.png"
            alt="Technogym"
            class="w-full h-auto max-h-16 md:max-h-20 object-contain"
          />
        </div>
      </div>

      <!-- SportsArt -->
      <div class="brand-logo-container w-full md:flex-1">
        <div class="brand-logo bg-white border border-white/10 p-4 md:p-6 flex items-center justify-center h-24 md:h-32 transition-all duration-300 hover:border-primary">
          <img
            src="/images/sportsart-logo.png"
            alt="SportsArt"
            class="w-full h-auto max-h-16 md:max-h-20 object-contain"
          />
        </div>
      </div>
    </div>

    <!-- Gym Photo -->
    <div class="mt-12 group overflow-hidden rounded-2xl border border-white/10 bg-white/5 transition-all duration-500 hover:border-primary/50">
      <img
        src="/images/fitcity-members.jpeg"
        alt="FitCity Members posing in front of the gym"
        class="w-full h-auto object-cover transition-transform duration-700 group-hover:scale-105"
      />
    </div>
  </div>
</Container>
