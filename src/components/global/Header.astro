---
import { Image } from 'astro:assets';
import OpenStatusBadge from './OpenStatusBadge.astro';
import logoWebp from '../../../public/images/fitcity-logov2.webp';
import logoPng from '../../../public/images/fitcity-logov2.png';

interface Props {
  theme?: 'default' | 'ladies';
}

// Theme is passed from BaseLayout but not used in Header (theme switching happens at HTML level)
const { theme: _theme = 'default' } = Astro.props;
---

<header class="sticky top-0 z-40 bg-bg-main/95 backdrop-blur-sm border-b border-white/10">
  <nav class="max-w-7xl mx-auto px-4 md:px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <Image src={logoWebp} alt="FitCity Culemborg" class="h-12 md:h-14 w-auto" loading="eager" fetchpriority="high" inferSize width={140} height={52} />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <OpenStatusBadge />
        <a href="/#pricing" class="text-text-main hover:text-primary transition-colors">PRIJZEN</a>
        <a href="/ladies-only" class="text-text-main hover:text-primary transition-colors">LADIES ONLY</a>
        <a href="/kickboxing" class="text-text-main hover:text-primary transition-colors">KICKBOXING</a>
        <a href="/contact" class="text-text-main hover:text-primary transition-colors">CONTACT</a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-text-main hover:text-primary transition-colors"
        aria-label="Open menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
  </nav>
</header>
